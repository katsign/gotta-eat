<div class="container">

<form class="form-inline" id="create-form">
  <div class="form-group">
    <input type="text"
           id="brgr"
           name="burger_name"
           class="form-control"
           placeholder="Enter Text"
           aria-label="Burger Name"
           aria-describedby="add-brgr">
           <div class="input-group-append">
          <button type="submit" class="btn btn-outline-primary" id="add-brgr">Add</button>
        </div>
  </div>
</form>

<div class="d-flex align-items-center justify-content-around">
<div class="jumbotron bg-light" id="orderUp">
  <h4>Order Up</h4>
  <ul id="not-d-list">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="jumbotron bg-light" id="devouredList">
  <h4>Devoured</h4>
  <ul id="d-list">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
</div>