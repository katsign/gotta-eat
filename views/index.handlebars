<div class="container">

<div class="d-flex align-items-center justify-content-around">
<div id="addBurger">
<img src="/assets/img/burger.png" width="222px" alt="burger icon" id="burgerImg">
<form class="form-inline" id="create-form">
  <div class="form-group">
    <div class="input-group m-3">
      <input type="text"
           id="brgr"
           name="burger_name"
           class="form-control"
           placeholder="Add a New Burger"
           aria-label="Burger Name"
           aria-describedby="add-brgr">
           <div class="input-group-append">
          <button type="submit" class="btn btn-secondary" id="add-brgr"><i class="material-icons">queue</i> Order</button>
      </div>
    </div>
  </div>
</form>
</div>

<div class="jumbotron bg-light m-3">
  <h4>Order Up</h4>
  <hr>
  <ul class="list-group">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="jumbotron bg-light m-3">
  <h4>Devoured</h4>
  <hr>
  <ul class="list-group">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>

</div>