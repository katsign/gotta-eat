<h2>Add Burger</h2>
<form id="create-form">
  <div class="form-group">
    <label for="brgr">Burger Type</label>
    <input type="text"
           id="brgr"
           name="burger_name"
           class="form-control"
           placeholder="Enter Text"
           aria-label="Burger Name"
           aria-describedby="add-brgr">
           <div class="input-group-append">
          <button type="submit" class="add-burger-btn" id="add-brgr">Add</button>
        </div>
  </div>
</form>

<div class="container">

<div class="d-flex flex-row justify-content-around">
<div class="undevoured-list card p-3">
  <h4>Not devoured</h4>
  <ul id="not-d-list">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="devoured-list card p-3">
  <h4>Devoured</h4>
  <ul id="d-list">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
</div>